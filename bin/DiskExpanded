export DiskSize="$(lsblk  -b /dev/mmcblk0   | grep disk | awk '{print $4}')"
export Part1Size="$(lsblk -b /dev/mmcblk0p1 | tail -n1  | awk '{print $4}')"
export Part2Size="$(lsblk -b /dev/mmcblk0p2 | tail -n1  | awk '{print $4}')"
export Unused=$(($DiskSize-$Part1Size-$Part2Size))

# echo "Disk  : $DiskSize"
# echo "Part1 : $Part1Size"
# echo "Part2 : $Part2Size"
# echo "Unused: $Unused"

#
# The SaveCard program will add an additional 20 MB for proper booting. If the resulting image
#   has less than 500MB of free space, we assume that the disk hasn't been expanded.
#
if [ "$Unused" -gt 500000000 ]; then
    echo
    echo "Disk is not expanded"
    echo
    exit 1
else
    echo
    echo "Disk is expanded"
    echo
    exit 0
fi

